{
  "name": "BH Tab Reloader/Activator",
  "description": "Extension to periodically reload tabs or keep them from going dormant",
  "version": "0.1",
  "permissions": ["tabs", "contextMenus", "commands", "alarms"],
  "action": {
    "default_title": "open",
    "default_popup": "popup.html",
    "default_icon": {                   
      "16": "images/16x16.png",
      "48": "images/48x48.png",
      "128": "images/128x128.png" 
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/16x16.png",
    "48": "images/48x48.png",
    "128": "images/128x128.png" 
  },
  "manifest_version": 3
}


